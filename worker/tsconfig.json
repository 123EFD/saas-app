{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": "..",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": ["src/**/*.ts", "../lib/**/*.ts"],
    "exclude": [
        "node_modules",
        "dist"
    ]
}